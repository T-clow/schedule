<h2 class="center-heading">予定の編集登録</h2>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title, class: "title-textarea", placeholder: "タイトルを入力してください" %></td>
    </tr>

    <tr>
      <th><%= f.label :start_at, "開始日" %></th>
      <td>
        <div class="input-group date">
          <%= f.text_field :start_at, class: "form-control datepicker", placeholder: "選択してください" %>
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
          </div>
        </div>
      </td>
    </tr>

    <tr>
      <th><%= f.label :end_at, "終了日" %></th>
      <td>
        <div class="input-group date">
          <%= f.text_field :end_at, class: "form-control datepicker", placeholder: "選択してください" %>
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
          </div>
        </div>
      </td>
    </tr>

    <tr>
      <th></th>
      <td><%= f.check_box :is_all_day %> <%= f.label :is_all_day, "終日の場合はチェックを入れます" %></td>
    </tr>

    <tr>
      <th><%= f.label :memo, "スケジュールメモ" %></th>
      <td><%= f.text_area :memo, class: "large-textarea", placeholder: "メモを入力してください"%></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "更新する", class: "btn btn-light" %></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts, class: "btn btn-light" %></li>
    </ul>
  </div>
<% end %>
